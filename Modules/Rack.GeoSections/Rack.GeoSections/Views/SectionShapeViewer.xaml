<reactiveUi:ReactiveUserControl
    x:TypeArguments="viewModels:SectionShapeViewerViewModel"
    x:Class="Rack.GeoSections.Views.SectionShapeViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Rack.GeoTools.Wpf.Controls;assembly=Rack.GeoTools.Wpf"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:viewModels="clr-namespace:Rack.GeoSections.ViewModels">
    <Grid>
        <controls:MapCanvas x:Name="MapCanvas" 
                            IsUniformScale="False"
                            IsAutoScaling="True"
                            AutoScalingOffset="30"
                            Background="White" />
        <TextBlock 
            x:Name="CoordinatesTextBlock"
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" />
    </Grid>
</reactiveUi:ReactiveUserControl>